---
interface Props {
    imgSrc: string;
    imgAlt: string;

}

let {imgSrc, imgAlt} = Astro.props;

---

<div class="w-full md:w6/12 lg:w-3/12 px-6 py-6">
    <div class="flex rounded-2xl flex-col bg-[#333333] border-4 border-white">
        <img class="rounded-t-xl" src={imgSrc != "" ? imgSrc : "public/img/unknown_member.jpg"} alt={imgAlt}>
        <div class="flex flex-col items-center">
            <h1 class="font-nexa text-white">Vít Novotný</h1>
            <p class="font-nexa text-white">Dabér</p>
        </div>
    </div>
</div>